<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      Sorry, please fix the <%= pluralize(object.errors.count, "error") %>.

      <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>

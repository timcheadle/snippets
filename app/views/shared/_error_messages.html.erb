<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      Sorry, we couldn't sign you up. Please fix the <%= pluralize(@user.errors.count, "error") %>.

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>
